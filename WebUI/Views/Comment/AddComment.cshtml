<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Bırakın</h4>
    <p class="mb-4">
        İşaretli Alanları Doldurulmak Zorunludur *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="UserName" class="form-control" placeholder="Adınız Soyadınız*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" name="DestinationID" class="form-control" value="@ViewBag.i" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>